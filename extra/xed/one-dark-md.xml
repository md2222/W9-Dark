<style-scheme id="one-dark-md" _name="One Dark MD" version="1.0">

  <author>MD</author>
  <_description>Dark color scheme using the One Dark color styles</_description>

  <!-- Palette -->
  <!-- 
  <color name="sel-fg"                      value="#c2c8d6"/>
  <color name="sel-bg"                      value="#444f64"/>
-->
  <color name="line-numbers"                value="#b0b0b0"/>
  <color name="def-fg"                      value="#d0d6e6"/>
  <color name="def-bg"                      value="#272d3a"/>
  <color name="sel-fg"                      value="#ffffff"/>
  <color name="sel-bg"                      value="#308cc6"/>

  <color name="preprocessor"                value="#d37cee"/>
  <color name="keyword"                     value="#f0dfaf"/>
  <color name="comment"                     value="#66748f"/>
  <color name="string"                      value="#88B379"/>
  <color name="number"                      value="#d49962"/>

  <color name="yellow1"                     value="#fce94f"/>
  <color name="green2"                      value="#88B379"/>
  <color name="green1"                      value="#8ae234"/>
  <color name="green12"                     value="#4e9a06"/>
  <color name="blue22"                      value="#729fcf"/>
  <color name="cyan1"                       value="#7ebfce"/>
  <color name="violet22"                    value="#ad7fa8"/>
  <color name="gray21"                      value="#e2e4e9"/>
  <color name="red22"                       value="#c42214"/>
  <color name="grayblue14"                  value="#444f64"/>
  <color name="white"                       value="#ffffff"/>


  <!-- Global Settings -->
  <style name="text"                        foreground="def-fg" background="def-bg"/>
  <style name="selection"                   foreground="sel-fg" background="sel-bg"/>
  <style name="cursor"                      foreground="white"/>
  <style name="secondary-cursor"            foreground="yellow1"/>
  <style name="current-line"                background="#313745"/>
  <style name="line-numbers"                foreground="line-numbers" background="#404040"/>
  <style name="draw-spaces"                 foreground="grayblue14"/>
  <style name="background-pattern"          background="def-fg"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="gray21"/>
  <style name="bracket-mismatch"            foreground="gray21" background="red22"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="sel-fg" background="def-bg"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="sel-fg" background="green12"/>
  

  <!-- Comments -->
  <style name="def:comment"                 foreground="comment"/>
  <style name="def:shebang"                 foreground="comment" />
  <style name="def:doc-comment-element"  />

  <!-- Constants -->
  <style name="def:constant"                foreground="number"/>
  <style name="def:string"                  foreground="string"/>
  <style name="def:special-char"            foreground="preprocessor"/>
  <style name="def:special-constant"        foreground="number"/>
  <style name="def:floating-point"          foreground="number"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="white"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="keyword"/>

  <!-- Types -->
  <style name="def:type"                    foreground="keyword"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="preprocessor"/>
  <style name="def:error"                   foreground="def-fg" background="red22"/>
  <style name="def:warning"                 foreground="def-fg" background="violet22"/>
  <style name="def:note"                    background="yellow1" foreground="grayblue14"/>
  <style name="def:underlined"              italic="true" underline="single"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->

  <!-- Language specific -->
  <style name="diff:added-line"             foreground="green2"/>
  <style name="diff:removed-line"           foreground="blue22"/>
  <style name="diff:changed-line"           foreground="violet22"/>
  <style name="diff:diff-file"              foreground="green1" bold="true"/>
  <style name="diff:location"               foreground="green1"/>
  <style name="diff:special-case"           foreground="white" bold="true"/>

  <style name="xml:element-name"            foreground="cyan1"/>
  <style name="xml:attribute-name"          foreground="keyword"/>
  <!-- ?
  <style name="xml:attribute-name"          foreground="#63a4e1"/>
  <style name="xml:tags"                    foreground="#dfdfbf"/>
  <style name="xml:namespace"               foreground="green" bold="true"/>
  <style name="xml:entity"                  foreground="red"/>
  <style name="xml:cdata-delim"             foreground="#008080" bold="true"/>
  <style name="xml:processing-instruction"  bold="true"/>
  <style name="xml:doctype"                 foreground="dark-red" bold="true"/>
    -->

  <style name="latex:command"               foreground="green1" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>
  

  <!-- Meld -->
  <style name="meld:insert" background="#374831" foreground="#4e6206" line-background="#374831"/>
  <style name="meld:replace" background="#304f6a" foreground="#1d59d6" line-background="#304f6a"/>
  <style name="meld:conflict" background="#7a2a28" foreground="#ff0000" line-background="#7a2a28"/>
  <!-- FIXME: delete background should be @theme_bg_color; line should be shaded of that -->
  <style name="meld:delete" background="#f7f7f7" foreground="#a40000" line-background="#cccccc"/>
  <style name="meld:error" background="#fce94f" foreground="#faad3d" line-background="#fdf8cd"/>
  <style name="meld:inline" background="#233b4f"/>
  <style name="meld:current-line-highlight" foreground="#eeeeee" background="#rgba(17, 17, 0, 0.25)"/>
  <style name="meld:unknown-text" foreground="#aaaaaa"/>
  <style name="meld:syncpoint-outline" foreground="#bbbbbb"/>
  <style name="meld:current-chunk-highlight" background="#rgba(255, 255, 255, 0.06)"/>
  <style name="meld:dimmed" foreground="#999999"/>
</style-scheme>
