#gtk-color-scheme	= "bg_color:#404041\nfg_color:#e0e0e0\nbase_color:#272d3a\ntext_color:#e0e0e0\ninsensitive_base_color:#333333\nselected_bg_color:#308cc6\nselected_fg_color:#f0f0f0\ninsensitive_bg_color:#404041\ntooltip_bg_color:#606060\ntooltip_fg_color:#e7e7e7"

# Text/base
gtk-color-scheme = "base_color:#272d3a\ntext_color:#e0e0e0\ninsensitive_base_color:#333333"
# Foreground/background
gtk-color-scheme = "bg_color:#404041\nfg_color:#e0e0e0"
# Selected foreground/background
gtk-color-scheme = "selected_bg_color:#308cc6\nselected_fg_color:#f5f5f5"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#d0d0d0\ninsensitive_bg_color:#404041"
# Menus
gtk-color-scheme = "menu_color:#404041"
# Links
gtk-color-scheme = "link_color:#00aaff\nvisited_link_color:#0091d9"
# Treeview headers
gtk-color-scheme = "column_header_color:#404041\nhover_column_header_color:#474748"
# Window decoration
gtk-color-scheme = "window_color:#404041"
# Tooltips
gtk-color-scheme = "tooltip_bg_color:#606061\ntooltip_fg_color:#e7e7e7"


gtk-icon-sizes = "gtk-button=16,16" # This makes button icons smaller.
gtk-auto-mnemonics = 1  # Disables ugly lines under menu items
gtk-primary-button-warps-slider = 1
gtk-button-images	= 0 # Enables icons in buttons
gtk-toolbar-style	= 0 # Disables text in toolbar
# ? gtk-font-name = "Sans 12"


style "default"
{
	xthickness	= 1
	ythickness	= 1

	# Style Properties

	GtkWidget::focus-line-width	= 1
    GtkWidget::focus-line-pattern = "\1\2"
	GtkMenuBar::window-dragging	= 1
	GtkToolbar::window-dragging	= 1
	GtkToolbar::internal-padding	= 4
    GtkToolButton::icon-spacing     = 4

    GtkWidget::tooltip-radius       = 0
    GtkWidget::tooltip-alpha        = 220
    GtkWidget::new-tooltip-style    = 1 #for compatibility

  GtkWidget::link-color              = @link_color
  GtkWidget::visited-link-color      = @visited_link_color
  GnomeHRef::link_color              = @link_color
  GtkHTML::link-color                = @link_color
  GtkHTML::vlink-color               = @visited_link_color
  GtkIMHtml::hyperlink-color         = @link_color
  GtkIMHtml::hyperlink-visited-color = @visited_link_color

	GtkSeparatorMenuItem::horizontal-padding = 3
    GtkSeparatorMenuItem::wide-separators    = 1
    GtkSeparatorMenuItem::separator-height   = 1

	GtkButton::child-displacement-y	= 0
	GtkButton::default-border	= { 0, 0, 0, 0 }
	GtkButton::default-outside_border = { 0, 0, 0, 0 }
    #GtkButton::inner-border           = {1, 1, 1, 1}  # increases size, 1 - default

    GtkEntry::state-hint  = 1
    #GtkEntry::inner-border = {7, 7, 4, 5}

	GtkRange::trough-border		= 0
	GtkRange::slider-width		= 13
	GtkRange::stepper-size		= 0
	#GtkRange::stepper-spacing   = 0
	#GtkRange::arrow-scaling     = 0.25
    GtkRange::activate-slider   = 1

	GtkScrollbar::activate-slider	            = 1
	GtkScrollbar::stepper-size	                = 13
	GtkScrollbar::trough-border	= 0
    GtkScrollbar::slider-width = 13
	GtkScrollbar::has-backward-stepper		    = 1  
	GtkScrollbar::has-forward-stepper		    = 1
    GtkScrollbar::min-slider-length             = 32
	GtkScrolledWindow ::scrollbar-spacing		= 0
	GtkScrolledWindow ::scrollbars-within-bevel	= 1

	#GtkHScale::slider_length 	= 11
	#GtkHScale::slider_width 	= 19
	#GtkVScale::slider_length 	= 11
	#GtkVScale::slider_width 	= 19
    GtkScale::slider_length = 11
    GtkScale::slider_width = 24
    GtkScale::trough-side-details = 1
    
  GtkProgressBar::min-horizontal-bar-height = 14
  GtkProgressBar::min-vertical-bar-width = 14
  GtkProgressBar::xspacing = 4
  GtkProgressBar::yspacing = 4

	GtkStatusbar::shadow_type	= GTK_SHADOW_NONE
	GtkSpinButton::shadow_type 	= GTK_SHADOW_NONE
	GtkMenuBar::shadow-type		= GTK_SHADOW_NONE
	GtkToolbar::shadow-type		= GTK_SHADOW_NONE
	GtkMenuBar::internal-padding	= 0	#( every window is misaligned for the sake of menus ):
	GtkMenu::horizontal-padding	= 0
	GtkMenu::vertical-padding	= 2
  GtkMenu::double-arrows       = 0
  GtkMenuItem::arrow-scaling   = 1
  GtkMenuItem::toggle-spacing  = 10

	GtkCheckButton::indicator_spacing	= 3
	GtkOptionMenu::indicator_spacing	= { 8, 2, 0, 0 }

	GtkTreeView::row_ending_details 	= 0
	GtkTreeView::expander-size		= 11
	GtkTreeView::vertical-separator		= 4
	GtkTreeView::horizontal-separator	= 4
	GtkTreeView::allow-rules		= 1
	GtkTreeView::odd_row_color = @base_color

    GtkExpander::expander-size              = 11

  #GtkNotebook::tab-overlap = 4
  
  GtkLabel::shadow-type		= GTK_SHADOW_NONE


	# Colors

	bg[NORMAL]		= @bg_color		# Normal Background, inactive Metacity bar, buttons
	bg[PRELIGHT]	= shade (1.2, @bg_color)		# Mouseover buttons
	bg[ACTIVE]		= shade (0.9, @bg_color)		# Mouseclicking, Tabs, active window list
	bg[SELECTED]	= @selected_bg_color		# Metacity Bar
	bg[INSENSITIVE] = @bg_color		# Insensitive buttons

	fg[NORMAL]		= @fg_color		# Metacity and mouseover, Most text
	fg[PRELIGHT]	= @fg_color		# Text when mouseover
	fg[ACTIVE]		= @fg_color		# Text when mouseclicking button, Tabs, Active window list
	fg[SELECTED]	= @selected_fg_color		# Metacity X when window selected
	fg[INSENSITIVE]	= shade (0.7, @fg_color)	# Insensitive Text

	base[NORMAL]		= @base_color	# Background color of text widgets and lists. 
	base[PRELIGHT]		= shade (0.95, @base_color)	# Mouseover menu
	base[ACTIVE]		= shade (0.9, @selected_bg_color)	# Menu active item in inactive window
	base[SELECTED]		= @selected_bg_color	# Menu active item in active window
	base[INSENSITIVE]	= @base_color	# Background, insensitive

	text[NORMAL]		= @text_color	# Text in window
	text[PRELIGHT]		= @text_color	# Text on Mouseover
	text[ACTIVE]		= @selected_fg_color	# Active text in inactive window ?
	text[SELECTED]		= @selected_fg_color	 # Active text in active window
	text[INSENSITIVE]	= shade (0.7, @text_color)	 # Unknown


	# For succinctness, all reasonable pixmap options remain here

  # Draw frame around menu in a non-compositied environment
  # This needs to go before pixmap because we need to override some stuff
  engine "adwaita" {}

